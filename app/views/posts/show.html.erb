<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>

<p>
  <strong>Upvotes:</strong>
  <%= @post.upvotes %>
</p>

<p>
  <strong>Downvotes:</strong>
  <%= @post.downvotes %>
</p>

<p>
  <strong>Link:</strong>
  <%= @post.link %>
</p>

<% unless @post.image.nil? %>
  <p>
    <strong>Image:</strong>
    <a href="<%= @post.image %>">Link</a>
  </p>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
